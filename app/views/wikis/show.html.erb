<h1><%= markdown_to_html @wiki.title %></h1>

<%= markdown_to_html @wiki.body %>

<p><%= link_to "Edit Wiki", edit_wiki_path(@wiki.id) %></p>
<% if policy(@wiki).destroy? %>
  <p><%= link_to "Delete Wiki", wiki_path(@wiki.id), method: :delete %></p>
<% end %>

<h3>Collaborators</h3>
<p>
  <% @wiki.users.each do |user| %>
    <p><%= user.name %></p>
  <% end %>
</p>